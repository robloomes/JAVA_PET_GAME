package pet_game;
/**
 * Species.java - a class used for building different Species.
 * <p>
 * This contains methods for returning and changing Species attributes.
 * Species objects created are mainly used in association with classes @see Pet and @see gameEnvironment. 
 * 
 * @author Robert Loomes
 * @author Mna Chalabi
 * @since Winter 2017
 * @version 1.0
 */
public class Species extends Pet {
		/**
		 * Constructor method for Food class.
		 * @param name A variable of type String.
		 * @param startSleepMod A variable of type double.
		 * @param startHungerMod A variable of type double.
		 * @param startEnergyMod A variable of type double.
		 * @param startFavFood A variable of type String
		 * @param startFavToy A variable of type String.
		 * @param startSpecies A variable of type String.
		 * @param startWeight A variable of type Integer.
		 * @param startRoughness A variable of type double.
		 * @return Nothing.
		 */
		public Species(String name, 
					   double startSleepMod,
				  	   double startMoodMod,
					   double startHungerMod, 
					   double startEnergyMod, 
					   String startFavFood,
					   String startFavToy,
					   String startSpecies,
					   int startWeight,
					   double startRoughness){
		super(name);
		moodMod = startMoodMod;
		hungerMod = startHungerMod;
		energyMod = startEnergyMod;
		favFood = startFavFood;
		favToy = startFavToy;
		speciesName = startSpecies;
		weight = startWeight;
		roughness = startRoughness;
		}
	/**
	 * Constructor for cloning the class, not just the reference.
	 * @param name  
	 * @param species 
	 */
    //
	public Species(String name, Species species){
		super(species, name);
		moodMod = species.moodMod;
		hungerMod = species.hungerMod;
		energyMod = species.energyMod;
		favFood = species.favFood;
		favToy = species.favToy;
		speciesName = species.speciesName;
		weight = species.weight;
		roughness = species.roughness;
		}
	
	/**
	 * Overides the default toString method.
	 * Produces a formatted String of all Species variables.
	 * @return Formatted String.
	 */
   public String toString() {
	   String petName = "Name: " + this.getName();
	   String petSpecies = "Species: " + this.getSpecies();
	   String petWeight = "Weight: " + this.weight;
	   String petAge = "Age: " + this.getAge();
	   String petMood = "Mood: " + this.getMood();
	   String petEnergy = "Energy: " + this.getEnergy();
	   String petHealth = "Health: " + this.getHealth();
	   String petHunger = "Hunger: " + this.getHunger();
	   String petToiletNeed = "Toilet Need: " + this.getToiletNeed();
	   String petAlive = "Alive: " + this.getAlive();
	   String petRevive = "Revive: " + this.getRevive();
	   String petSick = "Sick: " + this.getSick();

	   String petStats = String.format("%s %n%s %n%s %n%s %n%s %n%s %n%s %n%s %n%s %n%s %n%s %n%s", 
		             petName, petSpecies, petWeight, petAge,
		             petMood, petEnergy, petHealth,
		             petHunger, petToiletNeed,
		             petAlive, petRevive, petSick); 
	   return petStats;
   }
	   
   public static void main(String[]args){
			//unit testing
		    Species cat = new Species("lolo", 1.0, 5.0, 1.0, 1.0, "food", "toy", "cloud", 100, 1.0); 
			System.out.println("\n"+ cat);
			Species cat2 = new Species("catclone", cat);
			System.out.println("\n"+ cat);
			System.out.println("\n"+ cat2);
			cat.endDay();
			System.out.println("\n" + cat);
			System.out.println("\n"+ cat2);
			System.out.println(cat.getMoodMod());
	   }
	}
